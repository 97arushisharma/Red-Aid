<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aadhar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.DIC.RedAid.Application.DIC.App.RedAid.Application.aadhar"
    android:background="@drawable/bbbb3"
    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/ll_scan_qr_wrapper"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_margin="@dimen/home_list_margin"
        android:padding="@dimen/home_list_padding"
        android:orientation="horizontal"
        android:onClick="scanNow">
        <!-- scanner -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/qr_scanner"/>
        </LinearLayout>
        <!-- Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Scan New Aadhaar Card"
                android:gravity="center"
                android:textStyle="bold"

                android:textSize="@dimen/home_list_text_size"/>
        </LinearLayout>
    </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:text="Save my information"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/savebtn" />

    <Button
        android:text="Maybe later"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nobtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv"/>

</LinearLayout>

</LinearLayout>
</ScrollView>
